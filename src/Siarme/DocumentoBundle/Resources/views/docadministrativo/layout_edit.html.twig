{% extends 'DocumentoBundle:Default:layout_base_new.html.twig' %}

{% block formulario %}
	{{ form_start(edit_form) }}
	{{ form_errors(edit_form) }}
	{{ form_row(edit_form.fechaDocumento, {'label': 'Fecha:'}) }}
	{% block dirigidoA %}
	<div>
		{{ form_label(edit_form.texto, 'Dirigido A:') }}
		{{ form_errors(edit_form.texto) }}
		{{ form_widget(edit_form.dirigidoA) }}
	</div>   
	{% endblock %}

	<div>    
		{{ form_label(edit_form.texto) }}
		{{ form_errors(edit_form.texto) }}
		{{ form_widget(edit_form.texto) }}
	</div>

	<div class="hidden">
		{{ form_widget(edit_form.estado) }}
	</div>

	<div class="text-right">
		<input class="btn btn-danger"  type="submit" value="Guardar" />
	</div>

	{{ form_end(edit_form) }}

{% endblock %}