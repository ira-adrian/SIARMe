        {% endblock %}
    </div>
    {% block javascripts %}
        {% javascripts 
        '@jquery' 
        '@bootstrap_js' %}

            <script src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endblock %}
</div>
</body>

</html>
